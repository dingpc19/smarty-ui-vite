{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
        "jsx": "preserve",
        "lib": ["es2015"]
    },
    "include": [
        "./**/*.*",
        "./shims-vue.d.ts",
        "docs/.vitepress/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": "true"
}